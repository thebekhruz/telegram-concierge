# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# CRM Channel (where to send manager connection requests)
CRM_CHANNEL_ID=-1001234567890

# Mini App Configuration (Telegram Web App)
# For production: Use HTTPS URL (required by Telegram)
# For development: Use ngrok or similar tunneling service
WEB_APP_URL=https://your-domain.com
WEB_APP_PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telegram_concierge
DB_USER=postgres
DB_PASSWORD=your_password_here

# Admin User IDs (comma-separated Telegram user IDs who can access admin panel)
ADMIN_USER_IDS=123456789,987654321

# Environment
NODE_ENV=development
